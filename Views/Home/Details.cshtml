@model Pie

<h2>@Model.Name</h2>

<div class="card m-1">
    <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.Name">
    <div class="card-body">
        <h3 class="text-right text-success">@Model.Price.ToString("c")</h3>
        <h3>
            <a> @Model.Name </a>
        </h3>

        <h5 class="text-primary">@Model.ShortDescription</h5>
        <p class="card-text">@Model.LongDescription</p>

    </div>
</div>