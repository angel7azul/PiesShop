@model Pie

<form asp-action="AddPie" method="post" role="form">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Nombre Completo">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="ShortDescription"></label>
            <input asp-for="ShortDescription" class="form-control" placeholder="Descripción Corta">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="LongDescription"></label>
            <input asp-for="LongDescription" class="form-control" placeholder="Descripción Larga">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" placeholder="Precio">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="Url Imagen">
        </div>
         <div class="form-group col-md-6">
            <label asp-for="ImageThumbnailUrl"></label>
            <input asp-for="ImageThumbnailUrl" class="form-control" placeholder="Url Imagen Miniatura">
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label" asp-for="IsPieOfTheWeek">
                ¿Pie de la semana?
            </label>
        </div>       
    </div>

    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label" asp-for="IsInStock">
                ¿Disponible?
            </label>
        </div>       
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save"></i> Agregar
    </button>
</form>