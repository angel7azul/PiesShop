@model Feedback

<form asp-action="Index" method="post" role="form">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" placeholder="Nombre Completo">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Correo Electrónico">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Message"></label>
        <textarea asp-for="Message" class="form-control" placeholder="Mensaje"></textarea>        
    </div>
    <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox">
            <label class="form-check-label" asp-for="ContactMe">
                Contáctame bebé
            </label>
        </div>       
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="fa fa-envelope"></i> Enviar Comentario
    </button>
</form>